{
  "name": "Ubuntu 22.04 with Build Utilities",
  "image": "ubuntu:22.04",
  "remoteUser": "vscode",
  "mounts": [
    "source=/usr/bin/git,target=/usr/bin/git,type=bind,consistency=cached",
    "source=/usr/bin/ssh,target=/usr/bin/ssh,type=bind,consistency=cached",
    "source=/usr/lib/git-core,target=/usr/lib/git-core,type=bind,consistency=cached",
    "source=/usr/share/git-core/templates,target=/usr/share/git-core/templates,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "sumneko.lua"
      ],
      "settings": {
        "git.path": "/usr/bin/git",
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "-u",
    "1000"
  ],
  "dockerFile": "Dockerfile",
  "workspaceMount": "source=${localWorkspaceFolder},target=${localWorkspaceFolder},type=bind,consistency=delegated",
  "workspaceFolder": "${localWorkspaceFolder}",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "devel"
    }
  }
}